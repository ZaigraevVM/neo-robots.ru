                    <div class="module-inner-link text-end">
                        <a class="preview-arrow--prev"><span class="arrow-border"><i class="fas fa-chevron-left"></i></span></a>
                        <a class="preview-arrow--next"><span class="arrow-border"><i class="fas fa-chevron-right"></i></span></a>
                    </div>
                </div>

                <div class="preview-img carousel slide carousel-fade mb-3" data-bs-ride="carousel">

                    <div class="preview-inner carousel-inner">
