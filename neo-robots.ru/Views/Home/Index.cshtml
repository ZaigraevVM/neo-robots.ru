<section>
    <div class="container">
        <div class="preview d-flex flex-row align-items-center mb-3" id="news-line">
            <div class="p-2 bd-highlight"><a class="module-title btn btn-primary">Главные новости</a></div>
            <div class="p-2 bd-highlight">
                <div class="preview-arrows">
                    <a href="#" class="preview-arrows--prev"><i class="fas fa-chevron-left"></i></a>
                    <a href="#" class="preview-arrows--next"><i class="fas fa-chevron-right"></i></a>
                </div>
            </div>
            <div class="preview-title p-2 bd-highlight">
                <div class="preview-inner">
                    @foreach (var news in Model.NewsSection1Slider)
                    {
                        <a href="/news?id=@news.Id">@news.Title</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<section class="carousel-img">
    <div class="row mb-5">
        <div class="col-md-4">
            @foreach (var news in Model.NewsSection1News)
            {
                <a href="/news?id=@news.Id">
                    <div class="desc-img mb-3">
                        <img src="@(ContentUrl.w450x150 + news.GetPhotoFile())" class="img-fluid" alt="img1">
                        <h6 class="fw-bold">@news.Title</h6>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-8">
            <div id="carousel-main" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var news in Model.NewsSection1Slider)
                    {
                        <div class="desc-img carousel-item @(yes?"active":"")">
                            <a href="/news?id=@news.Id">
                                <img src="@(ContentUrl.w1000x523 + news.GetPhotoFile())" class="d-block w-100" alt="Slide 1">

                                <div class="carousel-caption">

                                    <h3 class="fw-bold">@news.Title</h3>
                                </div>
                            </a>
                        </div>
                        yes = false;
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel-main" data-bs-slide="prev">
                    <i class="fas fa-chevron-left fa-2x"></i>
                    <span class="visually-hidden">Предыдущий</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel-main" data-bs-slide="next">
                    <i class="fas fa-chevron-right fa-2x"></i>
                    <span class="visually-hidden">Следующий</span>
                </button>
            </div>


        </div>
    </div>


</section>

<section class="holder">

    <div class="row mb-5">

        <div class="col-md-8">
            <div class="mb-3">
                <div class="module-inner mb-3">
