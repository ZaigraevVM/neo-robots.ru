                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @foreach (var news in Model.NewsSection2News)
                        {
                            <div class="preview">
                                <a class="image-link" href="/news?id=@news.Id">
                                    <img class="img-thumbnail mb-3 h-100" src="@(ContentUrl.w500x300 + news.GetPhotoFile())" alt="img">
                                </a>
                                <a class="link" href="/news?id=@news.Id"><h4 class="headline-news_wrapper text">@news.Title</h4></a>

                                <div class="socials small mb-3">
                                    @foreach (var nt in news.NewsThemes)
                                    {
                                        <a class="socials-link pe-4" href="#"><span class="socials-small">&nbsp;@nt.Theme.Name</span></a>
                                    }

                                    <a class="socials-link" href="#"><span class="socials-small">&nbsp;@news?.Newspapers?.Name</span></a>

                                </div>
                                <p class="preview-text">@news.Intro</p>
                              
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        @foreach (var news in Model.NewsSection3News)
                        {
