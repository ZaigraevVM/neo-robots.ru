<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/5/css/bootstrap.min.css" />
    <link href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Raleway:wght@200;300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SMI</a>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">

                    <ul class="navbar-nav">
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Политика</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Экономика</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Общество</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Наука</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Спорт</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Туризм</a>
                        </li>
                    </ul>
                    <div class="navbar-search">
                        <button class="rdnavbar-search-button" type="button"><i class="fas fa-search"></i></button>

                    </div>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>


    <div class="container mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section class="bottom">
        <div class="container mb-3">
            <div class="row">
                <div class="col-md-12">
                    <div class="nav-scroller py-1 mb-2 tagspopular">
                        <nav class="nav d-flex justify-content-between">
                            <a class="p-2 link-secondary" href="#">Политика</a>
                            <a class="p-2 link-secondary" href="#">Экономика</a>
                            <a class="p-2 link-secondary" href="#">В регионах</a>
                            <a class="p-2 link-secondary" href="#">Общество</a>
                            <a class="p-2 link-secondary" href="#">Происшествия</a>
                            <a class="p-2 link-secondary" href="#">Недвижимость</a>
                            <a class="p-2 link-secondary" href="#">Спорт</a>
                            <a class="p-2 link-secondary" href="#">Туризм</a>
                            <a class="p-2 link-secondary" href="#">Культура</a>
                        </nav>
                    </div>
                </div>
            </div>
            </div>
    </section> 

    <footer class="footer text-muted mb-3">
        <div class="container">
            &copy; @DateTime.Now.Year - SMI
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/5/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
